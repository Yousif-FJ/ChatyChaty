@{
    ViewData["Title"] = "HubClient";
    Layout = "_Layout";
}

<h2>Authentication</h2>
<div class="form-group mt-3">
    <label>JWT Token (get the jwt token from authentication controller)</label>
    <input class="form-control" type="text" id="Token" />
</div>
<button class="btn btn-primary" type="button" onclick="Authenticate()" id="Token">Authenticate and connect</button>


<div id="main-controller-container" hidden="hidden">
    <hr />
    <h2>Actions menu</h2>
    <ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
        <li hidden id="tamplateLi" class="nav-item" role="presentation">
            <a class="nav-link active" data-toggle="tab" role="tab"></a>
        </li>
    </ul>


    <div class="tab-content" id="myTabContent">
        <div hidden class="tab-pane fade show active" id="tamplateForm" role="tabpanel">
            <labe></labe>
            <input class="form-control" type="text" id="tamplateInput" />
            <button class="btn btn-primary mt-2" type="button" id="sendButtonTamplate">Send</button>
        </div>
    </div>


    <hr />
    <h2>Output:</h2>
    <div>
        <div>
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.3/signalr.min.js"></script>
<script src="~/js/Script.js"></script>